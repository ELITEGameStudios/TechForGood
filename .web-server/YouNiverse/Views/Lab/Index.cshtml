@model LabLoginViewModel

@{
	ViewData["Title"] = "Timesheet";
	ViewData["useHeader"] = false;
}

<link rel="stylesheet" href="css/site.css">

<div class="text-center">
	<br><br>
	<h1>Welcome to the Game Lab</h1>
	<br>
	<form method="post" id="sign-in-form">
		<label asp-for="StudentId">Sign-In/Out (Enter Student ID):</label><br>
		<input autocomplete="username" placeholder="Student ID" asp-for="StudentId" type="text" autofocus />
		<br><br>
		<input type="submit" value="Lab Sign-In/Out" />
		<input onclick="signInToAction('/Lab/Signin')" type="submit" value="Edit Profile" />
		@if (ViewData["loginError"] != null)
		{
			<p class="signin-error">@ViewData["loginError"]</p>
		}
		else
		{
			<br>
			<br>
		}
	</form>
	<br>
	<a asp-action="Guest">Guest Sign-In/Out</a>
</div>

<script>
	function signInToAction(action) {
		let form = document.getElementById("sign-in-form");

		form.action = action + window.location.search;
	}
</script>
